<% include ../include/header %>
<div id="wrapper">
    <% include ../include/nav %>
    <div id="page-wrapper" class="gray-bg dashbard-1">
        <% include ../include/navbar %>
        <% include ../include/contentTop %>
        <div class="wrapper wrapper-content animated fadeInRight">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>添加客户</h5>
                        </div>
                        <div class="ibox-content">
                            <form class="form-horizontal m-t" action="/crm/add" method="post" enctype="multipart/form-data">
                                <input type="hidden" name="id" value="<%= client._id %>">
                                <input type="hidden" name="clientId">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">公司：</label>
                                    <div class="col-sm-8">
                                        <input id="company" name="company" class="form-control" type="text" value="<%= client.company %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">职务：</label>
                                    <div class="col-sm-8">
                                        <input id="position" name="position" class="form-control" type="text"
                                               value="<%= client.position %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">姓名：</label>
                                    <div class="col-sm-8">
                                        <input id="name" name="name" class="form-control" type="text"
                                               value="<%= client.name %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">性别：</label>
                                    <div class="col-sm-8">
                                            <span>
                                                <input type="radio" name="sex" id="" value="0">男
                                            </span>
                                            <span>
                                                <input type="radio" name="sex" id="" value="1">女
                                            </span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">联系方式：</label>
                                    <div class="col-sm-8">
                                        <input id="contact" name="contact" class="form-control" type="text"
                                               value="<%= client.contact %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Email：</label>
                                    <div class="col-sm-8">
                                        <input id="email" name="email" class="form-control" type="text"
                                               value="<%= client.email %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">QQ：</label>
                                    <div class="col-sm-8">
                                        <input id="qq" name="qq" class="form-control" type="text"
                                               value="<%= client.qq %>">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">客户意向：</label>
                                    <div class="col-sm-8">
                                        <textarea name="intention" id="intention" rows="10"
                                                  class="form-control"><%= client.intention %></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">客户资料：</label>
                                    <div class="col-sm-8">
                                        <input id="data" name="data" class="form-control" type="file" multiple>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-8 col-sm-offset-3">
                                        <button class="btn btn-primary" type="submit">提交</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% include ../include/copy %>
    </div>
</div>

<% include ../include/footer %>



